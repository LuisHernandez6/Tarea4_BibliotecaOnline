@{
    ViewData["Title"] = "Login";
}

<h2 style="text-align:center; margin-bottom: 20px;">Iniciar Sesión</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert" id="mensaje">
        @ViewBag.Error
    </div>
}

<div style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); background-color: #fff;">
    <form method="post">
        <div class="form-group" style="margin-bottom: 15px;">
            <label>Nombre de Usuario</label>
            <input type="text" name="nombreUsuario" class="form-control" required value="@ViewBag.NombreUsuario" />
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label>Email</label>
            <input type="text" name="email" class="form-control" required value="@ViewBag.Email" />
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label>Contraseña</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
    </form>
</div>
