@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BibliotecaOnline.styles.css" asp-append-version="true" />
</head>

<body>
    @{
        // Tomamos el nombre del usuario desde la sesión
        var usuario = HttpContextAccessor.HttpContext.Session.GetString("Usuario");
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    BibliotecaOnline
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Sección derecha del header -->
                    <ul class="navbar-nav">
                        @if (string.IsNullOrEmpty(usuario))
                        {
                            <!-- Usuario NO logeado -->
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <!-- Usuario logeado -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false"
                                   style="font-weight: bold;">
                                    @usuario
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <form method="post" asp-controller="" asp-action="Logout">
                                            <button class="dropdown-item" type="submit">Cerrar sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER CENTRADO -->
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - BibliotecaOnline -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
