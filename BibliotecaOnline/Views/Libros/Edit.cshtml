@model BibliotecaOnline.Models.Libro

<h2 style="text-align:center; margin-bottom: 20px;">Editar Libro</h2>

<div style="max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); background-color: #fff;">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)
        @Html.ValidationSummary(true)

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Título</label>
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", required = "required", maxlength = "200" })
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Autor</label>
            @Html.TextBoxFor(m => m.Autor, new { @class = "form-control", required = "required", maxlength = "100" })
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Precio</label>
            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", required = "required", type = "number", min = "0", max = "9999999", step = "0.01" })
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Stock</label>
            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", required = "required", type = "number", min = "0", max = "9999" })
        </div>

        <button id="btnEditarLibro" type="submit" class="btn btn-primary btn-block">Actualizar</button>
    }
</div>
